# LLM Data Cleaning System - Environment Configuration Example
# Copy this to .env and update with your values

# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_data_cleaning
DB_USER=your_user
DB_PASSWORD=your_password

# Anthropic API Key (Required)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Security (Required for production)
SECRET_KEY=your-secret-key-here
SESSION_TIMEOUT=3600
ENVIRONMENT=demo

# Application Settings
APP_TITLE=LLM Data Cleaning System
APP_SUBTITLE=AI-Powered Laboratory Data Cleaning

# Redis Configuration (Optional - falls back to memory)
REDIS_URL=redis://localhost:6379/0
RATE_LIMITING_ENABLED=true

# Demo Configuration
DEMO_MODE=true
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_PASSWORD=demo123

# Feature Flags
ENABLE_TIME_SERIES=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_API_ACCESS=false

# Limits
MAX_UPLOAD_SIZE_MB=200
MAX_CONCURRENT_REQUESTS=3
DEFAULT_EXPERIMENT_LIMIT=1000
DEFAULT_API_CALL_LIMIT=10000
DEFAULT_STORAGE_LIMIT_MB=10000